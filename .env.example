# Reddit API credentials (get from https://www.reddit.com/prefs/apps)
REDDIT_CLIENT_ID=your_client_id
REDDIT_CLIENT_SECRET=your_client_secret
REDDIT_USER_AGENT=pulsed:v1.0.0 (by /u/yourusername)

# Email configuration (Gmail SMTP)
EMAIL_SENDER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_RECIPIENT=recipient@example.com
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# MLflow configuration
MLFLOW_TRACKING_URI=sqlite:///mlflow.db
MLFLOW_EXPERIMENT_NAME=pulsed

# Database
DATABASE_URL=sqlite:///news.db

# Application settings
LOG_LEVEL=INFO
DIGEST_SEND_HOUR=8
FETCH_INTERVAL_HOURS=1

# Model settings
CLASSIFIER_MODEL_NAME=distilbert-base-uncased
SUMMARIZER_MODEL_NAME=facebook/bart-large-cnn

# Thresholds for retraining
CLASSIFIER_RETRAIN_THRESHOLD=100
SUMMARIZER_RETRAIN_THRESHOLD=50
CLASSIFIER_IMPROVEMENT_THRESHOLD=0.02
SUMMARIZER_IMPROVEMENT_THRESHOLD=0.05

# API settings
API_HOST=0.0.0.0
API_PORT=8000
